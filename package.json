{
  "name": "api",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "nest build",
    "start": "cross-env NODE_ENV=dev nest start",
    "start:dev": "yarn run start --watch",
    "start:debug": "yarn run start start --debug --watch",
    "start:prod": "node dist/main",
    "x": "DOTENV_CONFIG_PATH=.env.dev node -r ts-node/register -r dotenv/config",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "yarn run lint --fix",
    "test": "jest",
    "test:watch": "yarn run test --watch",
    "test:cov": "yarn run test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=dev yarn run test --config ./test/jest-e2e.json",
    "typeorm": "yarn run x ./node_modules/typeorm/cli.js -d ./typeorm.data-source.ts",
    "typeorm:migration:generate": "yarn run typeorm migration:generate",
    "typeorm:migration:run": "yarn run typeorm migration:run",
    "typeorm:migration:revert": "yarn run typeorm migration:revert",
    "typeorm:seeder:up": "yarn run x scripts/typeorm-seeder-up.ts",
    "typeorm:seeder:down": "yarn run x scripts/typeorm-seeder-down.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "chalk": "^4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^44.0.0",
    "husky": "^8.0.1",
    "jest": "^27.2.5",
    "lint-staged": "^13.0.3",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "packageManager": "yarn@3.2.3"
}
